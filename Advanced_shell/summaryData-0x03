#!/bin/bash

# Directory containing JSON files
DATA_DIR="pokemon_data"
CSV_FILE="pokemon_report.csv"

# Check if directory exists
if [ ! -d "$DATA_DIR" ]; then
    echo "Data directory $DATA_DIR not found. Run Task 2 first."
    exit 1
fi

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$CSV_FILE"

# Loop through each JSON file and extract name, height, weight
for file in "$DATA_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert to meters and kg (API gives height in decimetres, weight in hectograms)
    height_m=$(awk "BEGIN {printf \"%.2f\", $height / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight / 10}")

    echo "$name,$height_m,$weight_kg" >> "$CSV_FILE"
done

echo "CSV Report generated at: $CSV_FILE"
echo ""

# Display CSV content
cat "$CSV_FILE"
echo ""

# Calculate averages
awk -F',' 'NR>1 { total_h+=$2; total_w+=$3; count++ }
END {
    printf "Average Height: %.2f m\n", total_h/count
    printf "Average Weight: %.2f kg\n", total_w/count
}' "$CSV_FILE"
